<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wecharades"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/wecharades_theme" >

        <!-- Start Screen Activity -->
        <activity android:name=".views.StartActivity" >

            <!-- DEFAULT STARTING SCREEN -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- New Game Activity -->
        <activity android:name=".views.NewGameActivity" >
        </activity>

        <!-- Invitations Activity -->
        <activity android:name=".views.InvitationActivity" >
        </activity>

        <!-- Search Player Activity -->
        <activity android:name=".views.SearchPlayerActivity" >
        </activity>

        <!-- Search Result Activity -->
        <activity android:name=".views.SearchResultActivity" >
        </activity>

        <!-- Game Dashboard Activity -->
        <activity
            android:name=".views.GameDashboardActivity"
            android:allowBackup="true"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>

        <!-- Login Activity -->
        <activity android:name=".views.LoginActivity" >
        </activity>

        <!-- Register Activity -->
        <activity android:name=".views.RegisterActivity" >
        </activity>

        <!-- Reset Password Activity -->
        <activity android:name=".views.ResetPasswordActivity" >
        </activity>

        <!-- Show Charade Word Activity -->
        <activity android:name=".views.ShowCharadeWordActivity" />

        <!-- VideoUploadActivity -->
        <activity
            android:name=".views.VideoUploadActivity"
            android:configChanges="orientation" />

        <!-- CaptureVideo Activity -->
        <activity
            android:name="com.example.wecharades.views.CaptureVideoActivity"
            android:configChanges="orientation" >
            <intent-filter>
                <action android:name="android.intent.action.START_VIDEO_CAMERA" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- GameActivity Activity -->
        <activity android:name=".views.GameActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main" />
        </activity>

        <!-- GuessCharadeActivity Activity -->
        <activity
            android:name=".views.GuessCharadeActivity"
            android:configChanges="orientation" />

        <!-- High Score Activity -->
        <activity android:name=".views.HighScoreActivity" />

        <!-- AccountActivity -->
        <activity android:name=".views.AccountActivity" />

        <!-- GameInstructionsActivity -->
        <activity android:name=".views.GameInstructionsActivity" />

        <service android:name="com.parse.PushService" />

        <receiver android:name="com.parse.ParseBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>