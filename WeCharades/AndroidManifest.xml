<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wecharades"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SectionListViewTheme" >
        <activity
            android:name=".StartScreen"
            android:label="@string/menu" >

            <!-- DEFAULT STARTING SCREEN -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewGameScreen"
            android:label="@string/new_game" />
        <activity
            android:name=".Friends"
            android:label="@string/friends" />
        <activity
            android:name=".GameScreen"
            android:label="@string/game" />

        <!-- Dashboard Activity/Start screen -->
        <activity
            android:name=".DashboardActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:label="Login Account" >
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:label="Register New Account" >
        </activity>

        <!-- Reset Password Activity -->
        <activity
            android:name=".ResetPasswordActivity"
            android:label="Reset Password" >
        </activity>
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask" >
            <intent-filter>

                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-qaf79ngsv26o0dd" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Not default anymore... -->
        <activity android:name="com.example.wecharades.Main" />
        <activity
            android:name="com.example.wecharades.ShowVideo"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.wecharades.CaptureVideo"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.START_VIDEO_CAMERA" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.wecharades.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName="com.example.wecharades.Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wecharades.Main" />
        </activity>
        <activity
            android:name="com.example.wecharades.PlayStreamedVideo"
            android:label="@string/app_name" />
        <activity
            android:name="com.example.wecharades.UploadVideo"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>