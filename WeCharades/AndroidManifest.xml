<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wecharades"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SectionListViewTheme" >
       
        <!-- Start screen Activity -->
        <activity
            android:name=".views.StartScreen"
            android:label="@string/menu" >

    		<!-- DEFAULT STARTING SCREEN -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".views.NewGameScreen"
            android:label="@string/new_game" />
        
        <activity
            android:name=".views.SearchPlayerScreen"
            android:label="@string/player">
            <meta-data 
                android:name="android.app.searchable"
            	android:resource="@xml/searchable" />
     	</activity>
     	
        <activity 
            android:name=".SearchResultsActivity" 
            android:label="@string/search_result">
   			<intent-filter>
        		<action android:name="android.intent.action.SEARCH" />
    		</intent-filter>
		</activity>
        
        <activity
            android:name=".views.GameScreen"
            android:label="@string/game" />

        <!-- Login Activity -->
        <activity
            android:name=".views.LoginActivity"
            android:label="Login Account" >
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".views.RegisterActivity"
            android:label="Register New Account" >
        </activity>

        <!-- Reset Password Activity -->
        <activity
            android:name=".views.ResetPasswordActivity"
            android:label="Reset Password" >
        </activity>

        <!-- DROPBOX Activity -->
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask" >
            <intent-filter>

                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-qaf79ngsv26o0dd" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Not default anymore... -->
        <activity android:name=".views.Main" />

        <!-- VideoUploadActivity -->
        <activity
            android:name=".views.VideoUploadActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" />

        <!-- CaptureVideo Activity -->
        <activity
            android:name=".views.CaptureVideo"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.START_VIDEO_CAMERA" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- GameActivity Activity -->
        <activity
            android:name=".views.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName=".views.Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main" />
        </activity>

        <!-- PlayStreamedVideo Activity -->
        <activity
            android:name=".views.PlayStreamedVideo"
            android:configChanges="orientation"
            android:label="@string/app_name" />
    </application>

</manifest>