<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wecharades"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:theme="@style/SectionListViewTheme" 
        android:debuggable="true">
        <activity 
            android:name=".StartScreen" 
            android:label="@string/menu">
          	<intent-filter>
            	<action android:name="android.intent.action.MAIN" />
              	<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewGameScreen" android:label="@string/new_game"/>
        <activity android:name=".Friends" android:label="@string/friends"/>
        <activity android:name=".GameScreen" android:label="@string/game"/>
    </application>

</manifest>