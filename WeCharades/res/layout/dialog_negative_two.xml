<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_error"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/negativeTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/error"
        android:gravity="center_vertical"
        android:text="@string/errorTitle"
        android:textAppearance="@style/text_large"
        android:textColor="@color/LightRed" />

    <TextView
        android:id="@+id/negativeText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@style/text_medium"
        android:textColor="@color/LightRed" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

        <Button
            android:id="@+id/dismiss"
            style="@style/button_style"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/ok" />

        <Button
            android:id="@+id/back"
            style="@style/button_style"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/ok" />
    </LinearLayout>

</LinearLayout>