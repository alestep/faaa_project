<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/gameInstructionsTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/gameInstructionsTitle"
        android:textAppearance="@style/text_large"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/gameInstructionsSubtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/gameInstructionsSubtitle"
        android:textAppearance="@style/text_medium"
        android:layout_marginBottom="10dp"
        android:textStyle="italic" />

    <ExpandableListView
        android:id="@+id/instructionsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:groupIndicator="@drawable/next"
        android:childIndicator="@drawable/expandableList"
        android:divider="@null" >
    </ExpandableListView>

</LinearLayout>