<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000" >

    <Button
        android:id="@+id/videoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/downloadButton"
        android:layout_alignBottom="@+id/downloadButton"
        android:layout_toLeftOf="@+id/downloadButton"
        android:text="Play" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:text="What is the person visualizing?"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

    <VideoView
        android:id="@+id/streamedVideoSurface"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:layout_below="@+id/textView"
        android:layout_margin="4dp" />

    <Button
        android:id="@+id/downloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/playButton"
        android:layout_below="@+id/streamedVideoSurface"
        android:text="Download" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/downloadButton"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/textView"
        android:background="@drawable/ic_play"
        android:onClick="onClick" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/streamedVideoSurface"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/playButton"
        android:background="@android:color/white"
        android:ems="10"
        android:textColorHint="@android:color/background_light" />

</RelativeLayout>