<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progressLayout"
    android:layout_width="300dp"
    android:layout_height="170dp"
    android:background="@drawable/dialog_progress"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/progressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:text="HEJ"
            android:textAppearance="@style/text_large"
            android:textColor="@color/LightBlue" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/progressTitle" />
    </RelativeLayout>

    <TextView
        android:id="@+id/progressText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="HEJ"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="@style/text_medium"
        android:textColor="@color/LightBlue" />

    <Button
        android:id="@+id/ok"
        style="@style/button_style"
        android:background="@drawable/button_custom_blue"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/ok" />

</LinearLayout>