<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/btn_default_normal"
            android:text="@string/account"
            android:onClick="onClickAccount" />

        <Button
            android:id="@+id/invitations"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/btn_default_normal"
            android:onClick="onClickInvitations" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnAccount"
            android:layout_toRightOf="@+id/btnAccount"
            android:onClick="onClickLogout"
            android:background="@drawable/btn_default_normal"
            android:text="@string/logout" />

        <TextView
            android:id="@+id/user_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btnLogout"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <Button
        android:id="@+id/new_game_button"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_default_normal"
        android:onClick="onClickNewGame"
        android:text="@string/new_game"/>

</LinearLayout>