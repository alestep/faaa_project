<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/account"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/btn_default_normal" />

        <Button
            android:id="@+id/invitations"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/btn_default_normal"
            android:onClick="onClickInvitations" />

        <Button
            android:id="@+id/global_score"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/invitations"
            android:layout_alignBottom="@+id/invitations"
            android:layout_toLeftOf="@+id/invitations"
            android:background="@android:drawable/btn_star"
            android:onClick="onClickHighScore"/>

    </RelativeLayout>

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/btn_default_normal"
        android:onClick="onClickNewGame"
        android:text="@string/new_game" />

</LinearLayout>